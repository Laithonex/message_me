<h4 class="ui center aligned medium icon header">
  <i class="circular blue coffee icon"></i>
  Say Somthing
</h4>

<div class= "ui two column grid">
    <% @messages.each do |msg| %>
    <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui feed">
                    <div class="event">
                        <div class="content">
                            <div class="summary">
                                <em><%= msg.user.username %></em>: <%= msg.body %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="extra content">
                <form class="ui reply form">
                    <div class="field">
                        <div class="ui fluid icon input">
                            <input type="text" placeholder="Enter massage...">
                            <i class="bordered inverted blue edit icon"></i>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% end %>

    <div class="four wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui inverted vertical menu">
                    <a class="item">
                        Home
                    </a>
                    <a class="item">
                        Messages
                    </a>
                    <a class="item">
                        Friends
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 
